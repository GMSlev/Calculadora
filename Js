function calculadora( num1, num2) {
    if(operacao ==="+"){
        return  num1 + num2; 
    } else if(operacao === "-"){
        return num1 - num2;
    } else if(operacao === "*"){
        return num1 * num2
    } else if(operacao === "/"){
        return num2 !==0 ? num1 / num2: "Erro divisão por zero."
    } else {
        return "Operação Inválida";
    }

}
